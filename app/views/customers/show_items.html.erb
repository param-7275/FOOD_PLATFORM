<%= render partial: 'partials/customerheader' %>
<!DOCTYPE html>
<html>
<head>
  <title>Items</title>
  <style>
    /* Add CSS styles for item display */
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .item {
      width: 30%;
      margin: 10px;
      padding: 10px;
      background-color: #f0f0f0; /* Light gray background */
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

    h2 {
      color: #333; /* Dark gray text color */
    }

    p {
      color: #666; /* Medium gray text color */
    }

    .price {
      color: #009688; /* Green text color for price */
      font-weight: bold;
    }

    @media screen and (max-width: 992px) {
      .item {
        width: 45%;
      }
    }

    @media screen and (max-width: 600px) {
      .item {
        width: 90%;
      }
    }
  </style>
</head>
  <body>
    <div class="container">
      <% @items.each do |item| %>
        <div class="item">
          <% if item.image.attached? %>
            <%= image_tag(item.image, size: '140x80') %>
          <% else %>
            <p>No image available</p>
          <% end %>
          <h2><%= item.name %></h2>
          <p><%= item.description %></p>
          <p><%= item.price %></p>
          <%= button_to "Add", new_order_path(item_id: item.id), class: "add-to-cart-button", method: :get %>
        </div>
      <% end %>
    </div>
  </body>
</html>
